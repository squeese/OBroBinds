<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/FrameXML/UI.xsd">
  <Script file="deps/utilities.lua" />
  <Script file="deps/mixins.lua" />
  <Script file="deps/layouts.lua" />
  <Script file="deps/handlers.lua" />
  <Script file="deps/dropdown.lua" />

  <Frame name="OBroBindsRootTemplate" mixin="OBroBindsMixin" hidden="true" virtual="true" movable="true">
    <Size>
      <AbsDimension x="320" y="240" />
    </Size>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Scripts>
      <OnEvent method="OnEvent" />
      <OnShow method="OnShow" />
      <OnHide method="OnHide" />
      <OnLoad method="OnLoad" />
    </Scripts>
  </Frame>

  <Frame name="OBroBindsPanelTemplate" mixin="OBroBindsMixin" inherits="UIPanelDialogTemplate" virtual="true" enableMouse="true">
    <Anchors>
      <Anchor point="TOPLEFT" />
      <Anchor point="BOTTOMRIGHT" />
    </Anchors>
    <Scripts>
      <OnDragStart method="OnDragStart" />
      <OnDragStop method="OnDragStop" />
    </Scripts>
  </Frame>

  <Button name="OBroBindsTabsTemplate" mixin="OBroBindsMixin" inherits="CharacterFrameTabButtonTemplate" parentArray="Tabs" virtual="true">
    <Scripts>
      <OnClick method="OnClick" />
    </Scripts>
  </Button>

  <Frame name="OBroBindsPageTemplate" mixin="OBroBindsMixin" parentArray="Pages" hidden="true" virtual="true">
    <Anchors>
      <Anchor point="TOPLEFT" />
      <Anchor point="BOTTOMRIGHT" />
    </Anchors>
    <Scripts>
      <OnShow method="OnShow" />
      <OnHide method="OnHide" />
    </Scripts>
  </Frame>

  <Button name="OBroBindsStanceButtonTemplate" mixin="OBroBindsMixin" inherits="ActionButtonTemplate" virtual="true">
    <Scripts>
      <OnClick method="OnClick" />
    </Scripts>
  </Button>

  <Button name="OBroBindsActionButtonTemplate" mixin="OBroBindsMixin" inherits="ActionButtonTemplate" virtual="true">
    <Scripts>
      <OnEnter method="OnEnter" />
      <OnLeave method="OnLeave" />
      <OnDragStart method="OnDragStart" />
      <OnReceiveDrag method="OnReceiveDrag" />
      <OnClick method="OnClick" />
    </Scripts>
  </Button>

  <ScrollFrame name="OBroBindsScrollTemplate" inherits="UIPanelScrollFrameTemplate" virtual="true">
    <Anchors>
      <Anchor point="TOPLEFT" x="18" y="-36" />
      <Anchor point="BOTTOMRIGHT" x="-18" y="18" />
    </Anchors>
    <Scripts>
      <OnLoad>
        self.scrollBarHideable = true
        ScrollFrame_OnLoad(self)
      </OnLoad>
    </Scripts>
  </ScrollFrame>

  <EditBox name="OBroBindsEditTemplate" multiLine="true" autoFocus="false" virtual="true">
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Scripts>
      <OnLoad>
        ScrollingEdit_OnCursorChanged(self, 0, 0, 0, 0)
      </OnLoad>
      <OnTextChanged>
        ScrollingEdit_OnTextChanged(self, self:GetParent())
      </OnTextChanged>
      <OnCursorChanged function="ScrollingEdit_OnCursorChanged"/>
      <OnUpdate>
        ScrollingEdit_OnUpdate(self, elapsed, self:GetParent())
      </OnUpdate>
      <OnEscapePressed function="EditBox_ClearFocus"/>
    </Scripts>
    <FontString inherits="GameFontHighlightMedium"/>
  </EditBox>

  <Button name="OLineTemplate" mixin="OBroBindsLineMixin" inherits="ScrollListLineTextTemplate" virtual="true">
    <Size>
      <AbsDimension y="28" />
    </Size>
    <Scripts>
      <OnDragStart method="OnDragStart" />
      <OnReceiveDrag method="OnReceiveDrag" />
    </Scripts>
    <Layers>
      <Layer level="BACKGROUND">
        <FontString parentKey="TextMiddle" inherits="GameFontHighlightSmall" justifyH="LEFT" maxLines="1">
          <Anchors>
            <Anchor point="LEFT" x="32" />
            <Anchor point="RIGHT" x="-32" />
          </Anchors>
        </FontString>
        <Texture parentKey="Icon" />
      </Layer>
    </Layers>
  </Button>

  <Frame name="OListTemplate" mixin="OBroBindsListMixin" inherits="ScrollListTemplate" virtual="true">
    <Scripts>
      <OnLoad method="OnLoad" />
    </Scripts>
  </Frame>

  <Script file="OBroBinds.lua" />
</Ui>
