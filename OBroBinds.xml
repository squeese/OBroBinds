<Ui xmlns='http://www.blizzard.com/wow/ui/'>
  <Script file="deps\utilities.lua" />
  <Script file="deps\layouts.lua" />
  <Script file="deps\actions.lua" />
  <Script file="deps\gui.frames.lua" />
  <Script file="deps\gui.keyboard.lua" />
  <Script file="deps\gui.editor.lua" />
  <Script file="deps\gui.selector.lua" />
  <Script file="deps\gui.misc.lua" />

  <Button name="OBroBindsIconLineTemplate" mixin="OBroBindsIconLineMixin" inherits="ScrollListLineTemplate" virtual="true">
    <Size>
      <AbsDimension y="40" />
    </Size>
    <Frames>
      <Button parentArray="Icons" inherits="ActionButtonTemplate" />
      <Button parentArray="Icons" inherits="ActionButtonTemplate" />
      <Button parentArray="Icons" inherits="ActionButtonTemplate" />
      <Button parentArray="Icons" inherits="ActionButtonTemplate" />
      <Button parentArray="Icons" inherits="ActionButtonTemplate" />
    </Frames>
  </Button>

  <Frame name="OBroBindsIconListTemplate" mixin="OBroBindsIconListMixin" inherits="ScrollListTemplate" virtual="true">
    <Scripts>
      <OnLoad method="OnLoad" />
    </Scripts>
  </Frame>

  <Button name="OBroBindsBlobLineTemplate" mixin="OBroBindsBlobLineMixin" inherits="ScrollListLineTextTemplate" virtual="true">
    <Size>
      <AbsDimension y="24" />
    </Size>
  </Button>

  <Frame name="OBroBindsBlobListTemplate" mixin="OBroBindsBlobListMixin" inherits="ScrollListTemplate" virtual="true">
    <Scripts>
      <OnLoad method="OnLoad" />
    </Scripts>
  </Frame>

  <ScrollFrame name="OBroBindsEditorTemplate" inherits="UIPanelScrollFrameTemplate" virtual="true">
    <Anchors>
      <Anchor point="TOPLEFT" x="18" y="-68" />
      <Anchor point="BOTTOMRIGHT" x="-36" y="52" />
    </Anchors>
    <ScrollChild>
      <EditBox parentKey="edit" multiLine="true" autoFocus="false">
        <Scripts>
          <OnLoad>
            ScrollingEdit_OnCursorChanged(self, 0, 0, 0, 0)
          </OnLoad>
          <OnCursorChanged function="ScrollingEdit_OnCursorChanged"/>
          <OnUpdate>
            ScrollingEdit_OnUpdate(self, elapsed, self:GetParent())
          </OnUpdate>
          <OnEscapePressed function="EditBox_ClearFocus"/>
        </Scripts>
        <FontString inherits="GameFontHighlightMedium"/>
      </EditBox>
    </ScrollChild>
    <Scripts>
      <OnLoad>
        BackdropTemplateMixin.OnBackdropLoaded(self)
        self.scrollBarHideable = false
        ScrollFrame_OnLoad(self)
      </OnLoad>
    </Scripts>
  </ScrollFrame>

  <Script file="OBroBinds.lua" />
</Ui>
